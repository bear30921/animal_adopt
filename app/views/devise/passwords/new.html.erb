<div class="user-edit user-signup">
  <div class="container">
    <div class="center">
      <h2 class="title">忘記密碼</h2>
      <div class="position">
        <h2>忘記密碼嗎?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <%= f.label :email, "Email" %>
              <br />
              <%= f.email_field :email, autofocus: true %>
            </div>

            <div class="actions">
              <%= f.submit "發送密碼修改郵件" %>
            </div>
        <% end %>

          <%= render "devise/shared/links" %>
          <div class="hold"></div>
      </div>
    </div>

  </div>


</div>