<!DOCTYPE html>
<html>

<head>
  <title>CatAdopt</title>
  <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
      <%= javascript_include_tag 'application' %>
</head>

<body>
  <div class="outer">

    <div class="header">
      <%= render "share/header" %>
    </div>
    
    <div class="main">
      <div class="container">
        <div class="notice">
          <%= notice %>
        </div>
      </div>
      <%= yield %>
    </div>
    
    <div class="footer">
      <%= render "share/footer" %>
    </div>
    
  </div>


</body>

</html>