<%= link_to "回首頁", cats_path %>

<div id="target">
  <% if not cat.avatar_file_name.nil? %>
    <%= image_tag cat.avatar.url(:medium) %>
  <% end %>
</div>



<%= form_for cat, html: { multipart: true } do |f| %>
  <ul class="form">
    <li><%= f.file_field :avatar %></li>
    <li><%= f.text_field :name, placeholder: "綽號" %></li>
    <li><%= f.select :sex, options_for_select([["男", "1"], ["女", "0"]], :selected => f.object.sex) %></li>
    <li><%= f.select :animal_type, options_for_select([["貓", "1"], ["狗", "2"]], :selected => f.object.animal_type) %></li>
    <li><%= f.text_field :age, placeholder: "年齡" %></li>
    <li><%= f.select :city, options_for_select(
      [
        ["基隆", "1"], ["台北", "2"], ["新北", "3"], ["桃園", "4"], ["新竹", "5"],
        ["苗栗", "6"], ["台中", "7"], ["彰化", "8"], ["南投", "9"], ["雲林", "10"],
        ["嘉義", "11"], ["台南", "12"], ["高雄", "13"], ["屏東", "14"], ["宜蘭", "15"],
        ["台東", "16"], ["澎湖", "17"]
      ], :selected => f.object.city) %></li>
    <li><%= f.select :is_neuter, options_for_select([["是", "true"], ["否", "false"]], :selected => f.object.is_neuter) %></li>
    <li><%= f.select :is_vaccine, options_for_select([["是", "true"], ["否", "false"]], :selected => f.object.is_vaccine) %></li>
    <li><%= f.text_area :description, placeholder: "描述" %></li>
    <li><%= f.submit "送出" %></li>
  </ul>
<% end %>







